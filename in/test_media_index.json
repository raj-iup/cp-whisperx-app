          "tests": [
            "Hinglish ASR accuracy",
            "Code-mixing (Hindi-English) handling",
            "Character name detection",
            "Devanagari script output"
          ]
        },
        {
          "workflow": "translate",
          "description": "Hindi → English translation",
          "source_language": "hi",
          "target_language": "en",
          "expected_quality": {
            "translation_bleu": 0.90,
            "fluency": 0.88,
            "cultural_adaptation": 0.80,
            "idiom_handling": 0.75
          },
          "tests": [
            "Hindi-to-English translation quality",
            "Cultural context preservation",
            "Idiom and metaphor translation",
            "Character name preservation",
            "Formality level maintenance"
          ]
        },
        {
          "workflow": "translate",
          "description": "Hindi → Gujarati translation (Indic-to-Indic)",
          "source_language": "hi",
          "target_language": "gu",
          "expected_quality": {
            "translation_bleu": 0.88,
            "fluency": 0.88,
            "script_consistency": 1.0
          },
          "tests": [
            "Indic-to-Indic translation quality",
            "IndicTrans2 model performance",
            "Script preservation (Devanagari → Gujarati)",
            "Cultural context preservation"
          ]
        },
        {
          "workflow": "translate",
          "description": "Hindi → Spanish translation (Indic-to-non-Indic)",
          "source_language": "hi",
          "target_language": "es",
          "expected_quality": {
            "translation_bleu": 0.85,
            "fluency": 0.82,
            "cultural_adaptation": 0.75
          },
          "tests": [
            "Indic-to-non-Indic translation",
            "NLLB model performance",
            "Cross-cultural adaptation",
            "Name transliteration"
