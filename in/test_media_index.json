{
  "version": "1.0",
  "last_updated": "2025-12-03",
  "description": "Standard test media samples for CP-WhisperX-App testing and validation",
  "purpose": "Establish reproducible testing baseline with diverse use cases across workflows",
  
  "test_samples": [
    {
      "id": "sample_01",
      "name": "English Technical Content",
      "file": "Energy Demand in AI.mp4",
      "path": "in/Energy Demand in AI.mp4",
      "type": "video/mp4",
      "size_estimate": "~14 MB",
      "duration_estimate": "2-5 minutes",
      
      "content": {
        "language": "en",
        "primary_language": "English",
        "content_type": "technical/educational",
        "domain": "artificial intelligence, energy",
        "description": "Technical discussion about energy demand in AI systems",
        "characteristics": [
          "Clear English audio",
          "Technical terminology (AI, energy, demand)",
          "Single speaker",
          "Minimal background noise",
          "Professional presentation style"
        ]
      },
      
      "workflows": [
        "transcribe",
        "translate"
      ],
      
      "test_scenarios": [
        {
          "workflow": "transcribe",
          "description": "English → English transcript",
          "source_language": "en",
          "target_language": "en",
          "expected_quality": {
            "asr_accuracy": 0.95,
            "wer": 0.05,
            "proper_noun_accuracy": 0.90,
            "technical_term_accuracy": 0.95
          },
          "tests": [
            "ASR accuracy on technical content",
            "Word-level alignment precision",
            "Technical terminology preservation",
            "Proper noun detection"
          ]
        },
        {
          "workflow": "translate",
          "description": "English → Hindi translation",
          "source_language": "en",
          "target_language": "hi",
          "expected_quality": {
            "translation_bleu": 0.90,
            "fluency": 0.90,
            "term_preservation": 1.0
          },
          "tests": [
            "Technical term translation accuracy",
            "English-to-Indic translation quality",
            "IndicTrans2 model performance"
          ]
        },
        {
          "workflow": "translate",
          "description": "English → Spanish translation",
          "source_language": "en",
          "target_language": "es",
          "expected_quality": {
            "translation_bleu": 0.88,
            "fluency": 0.85,
            "term_preservation": 1.0
          },
          "tests": [
            "English-to-non-Indic translation",
            "NLLB model performance",
            "Technical terminology handling"
          ]
        }
      ],
      
      "usage": {
        "primary_purpose": "Test ASR accuracy on English technical content",
        "secondary_purpose": "Validate translation quality for technical domain",
        "recommended_for": [
          "ASR accuracy testing",
          "English language validation",
          "Technical terminology handling",
          "Translation quality baseline"
        ]
      }
    },
    
    {
      "id": "sample_02",
      "name": "Hinglish Bollywood Content",
      "file": "jaane_tu_test_clip.mp4",
      "path": "in/test_clips/jaane_tu_test_clip.mp4",
      "type": "video/mp4",
      "size_estimate": "~28 MB",
      "duration_estimate": "1-3 minutes",
      
      "content": {
        "language": "hi-Hinglish",
        "primary_language": "Hindi",
        "secondary_language": "English (code-mixed)",
        "content_type": "entertainment/bollywood",
        "domain": "bollywood cinema, casual dialogue",
        "movie": "Jaane Tu... Ya Jaane Na (2008)",
        "description": "Bollywood movie dialogue with Hindi-English code-mixing (Hinglish)",
        "characteristics": [
          "Mixed Hindi-English (Hinglish)",
          "Typical Bollywood dialogue patterns",
          "Background music possible",
          "Multiple speakers",
          "Emotional/casual speech",
          "Cultural context (Indian youth culture)",
          "Character names (Jai, Aditi, Meow, etc.)"
        ]
      },
      
      "workflows": [
        "subtitle",
        "transcribe",
        "translate"
      ],
      
      "test_scenarios": [
        {
          "workflow": "subtitle",
          "description": "Hindi/Hinglish → Multiple subtitle tracks",
          "source_language": "hi",
          "target_languages": ["hi", "en", "gu", "ta", "es", "ru", "zh", "ar"],
          "expected_quality": {
            "asr_accuracy": 0.85,
            "wer": 0.15,
            "subtitle_timing_accuracy": "±200ms",
            "subtitle_quality": 0.88,
            "context_awareness": 0.80,
            "glossary_application": 1.0
          },
          "tests": [
            "Full pipeline execution (10 stages)",
