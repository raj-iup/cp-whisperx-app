        }
      ],
      
      "glossary": {
        "character_names": ["Jai", "Aditi", "Meow", "Rats", "Rotlu", "Jiggy", "Shaleen", "Bombs"],
        "cultural_terms": ["beta", "bhai", "ji", "yaar"],
        "common_phrases": ["Jaane Tu Ya Jaane Na"]
      },
      
      "usage": {
        "primary_purpose": "Test complete subtitle workflow with context awareness",
        "secondary_purpose": "Validate Hinglish ASR and multi-language translation",
        "recommended_for": [
          "Full pipeline integration testing",
          "Subtitle generation quality",
          "Context-aware features",
          "Multi-language output",
          "Glossary application",
          "Cultural adaptation",
          "Code-mixing handling",
          "Bollywood/Indic content"
        ]
      }
    }
  ],
  
  "usage_guidelines": {
    "quick_tests": {
      "description": "Fast validation of core functionality",
      "samples": ["sample_01"],
      "duration": "5-10 minutes",
      "workflows": ["transcribe"]
    },
    
    "comprehensive_tests": {
      "description": "Full pipeline validation with all features",
      "samples": ["sample_01", "sample_02"],
      "duration": "30-60 minutes",
      "workflows": ["subtitle", "transcribe", "translate"]
    },
    
    "quality_baselines": {
      "description": "Establish quality metrics for regression testing",
      "samples": ["sample_01", "sample_02"],
      "metrics": [
        "ASR Word Error Rate (WER)",
        "Translation BLEU score",
        "Subtitle timing accuracy",
        "Context preservation score",
        "Glossary application rate"
      ]
    },
    
    "caching_tests": {
      "description": "Validate caching and ML optimization",
      "samples": ["sample_02"],
      "scenarios": [
        "First run (cold cache)",
        "Second run (identical media)",
        "Third run (similar content)"
      ]
    }
  },
  
  "test_commands": {
    "sample_01_transcribe": {
      "description": "Transcribe English technical content",
      "command": "./prepare-job.sh --media \"in/Energy Demand in AI.mp4\" --workflow transcribe --source-language en",
      "expected_duration": "5-8 minutes"
    },
    
    "sample_01_translate_hi": {
      "description": "Translate English to Hindi",
      "command": "./prepare-job.sh --media \"in/Energy Demand in AI.mp4\" --workflow translate --source-language en --target-language hi",
      "expected_duration": "8-12 minutes"
    },
    
    "sample_02_subtitle": {
      "description": "Generate multi-language subtitles for Hinglish content",
      "command": "./prepare-job.sh --media in/test_clips/jaane_tu_test_clip.mp4 --workflow subtitle --source-language hi --target-languages en,gu,ta,es",
      "expected_duration": "15-25 minutes"
    },
    
    "sample_02_transcribe": {
      "description": "Transcribe Hinglish content",
      "command": "./prepare-job.sh --media in/test_clips/jaane_tu_test_clip.mp4 --workflow transcribe --source-language hi",
      "expected_duration": "8-12 minutes"
    },
    
    "sample_02_translate_en": {
      "description": "Translate Hindi to English",
      "command": "./prepare-job.sh --media in/test_clips/jaane_tu_test_clip.mp4 --workflow translate --source-language hi --target-language en",
      "expected_duration": "10-15 minutes"
    }
  },
  
  "quality_targets": {
    "english_technical": {
      "sample": "sample_01",
      "asr_wer": "≤5%",
      "translation_bleu": "≥90%",
      "technical_term_accuracy": "≥95%"
    },
    
    "hinglish_entertainment": {
      "sample": "sample_02",
      "asr_wer": "≤15%",
      "subtitle_quality": "≥88%",
      "context_awareness": "≥80%",
      "glossary_application": "100%",
      "subtitle_timing": "±200ms"
    }
  },
  
  "notes": [
    "Test samples should be version-controlled or stored in accessible location",
    "Baseline quality metrics should be updated quarterly",
    "Add new samples as pipeline capabilities expand",
    "Document any licensing restrictions for test media",
    "Consider adding samples for: Arabic, Chinese, Russian content",
    "Consider adding samples for: Noisy audio, accented speech, multi-speaker scenarios"
  ]
}
