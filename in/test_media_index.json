            "Character name preservation",
            "Cultural context adaptation",
            "Speaker diarization",
            "Soft-embedding in organized structure",
            "Temporal coherence across subtitles"
          ],
          "expected_output": {
            "directory": "out/{date}/{user}/{job}/10_mux/{media_name}/",
            "files": [
              "{media_name}_subtitled.mkv",
              "subtitles/{media_name}.hi.srt",
              "subtitles/{media_name}.en.srt",
              "subtitles/{media_name}.gu.srt",
              "subtitles/{media_name}.ta.srt",
              "subtitles/{media_name}.es.srt",
              "subtitles/{media_name}.ru.srt",
              "subtitles/{media_name}.zh.srt",
