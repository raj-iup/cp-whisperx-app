# cp-whisperx-app example .env (copy to ./config/.env and edit before running)
# All runtime tunables are read from ./config/.env (do not rely on exported shell env vars)

# Input
INPUT_FILE=
INPUT_URL=

# Output / logs
OUTPUT_ROOT=./out
LOG_ROOT=./logs
SECRETS_PATH=./config/secrets.json
SPEAKER_MAP=
CANON_MAP=./canon_map.yaml

# Pipeline flags
PREP_PROMPT=false
AUTO_CONTINUE=false
CLIP_VIDEO=false
CLIP_MINUTES=5

# Bias window (seconds)
WINDOW_SECONDS=45
STRIDE_SECONDS=15
BIAS_TOPK=10
BIAS_DECAY=0.9

# TMDB / metadata
INFER_TMDB=true

# Second pass translator
SECOND_PASS_ENABLED=true
SECOND_PASS_BACKEND=opus-mt

# Question generation (QG)
QG_ENABLED=false
QG_THRESHOLD=0.8
QG_FALLBACKS=true

# Lyrics detection
LYRIC_DETECT_ENABLED=false
LYRIC_THRESHOLD=0.5
LYRIC_STYLE=lyric

# NER
NER_ENABLED=false
NER_PRESET=en_core_web_trf

# Devices (preferred -> fallback)
# DEVICE_WHISPERX: MPS | CPU
# DEVICE_DIARIZATION: CUDA | CPU
# DEVICE_SECOND_PASS: MPS | CPU
# DEVICE_SPACY: CUDA | CPU
DEVICE_WHISPERX=MPS
DEVICE_DIARIZATION=CPU
DEVICE_SECOND_PASS=CPU
DEVICE_SPACY=CPU

# Languages / output
SRC_LANG=hi
TGT_LANG=en
OUTPUT_PLAINTEXT=false
